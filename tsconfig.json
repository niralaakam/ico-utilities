{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "target": "es2017",
    "module": "preserve",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
